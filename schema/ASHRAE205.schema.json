{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://data.ashrae.org/ASHRAE205.schema.json",
  "title": "ASHRAE 205 JSON Schema",
  "description": "A base schema for ASHRAE 205",

  "ASHRAE205":{
    "type": "object",
    "properties":{
      "RSID":{
        "description":"Representation specification identifier",
        "type": "string",
        "enum": ["RS0001", "RS0002", "RS0003"]
      },
      "RSVersion":{
        "description":"Representation specification version",
        "type": "string",
        "pattern": "[0-9]+\\.[0-9]+\\.[0-9]+"
      },
      "RSTitle":{
        "description":"Descriptive name of Representation specification",
        "type": "string"
      },
      "ID":{
        "description":"Unique equipment identifier",
        "type": "string",
        "pattern": "[0-9,a-f,A-F]{8}-[0-9,a-f,A-F]{4}-[0-9,a-f,A-F]{4}-[0-9,a-f,A-F]{4}-[0-9,a-f,A-F]{12}"
      },
      "data_timestamp":{
        "description":"Date of publication",
        "type": "string",
        "pattern":"[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}Z"
      },
      "data_vesion":{
        "description":"Free-form version identifier for this representation",
        "type": "string"
      },
      "description":{
        "description":"Free-form description of equipment (suitable for display)",
        "type": "string"
      },
      "data_source":{
        "description":"Free-form identification of the source of this data",
        "type": "string"
      },
      "notes":{
        "description":"Addiional Information",
        "type": "string"
      }
    },
    "required":["RSID","RSVersion","RSTitle","ID","data_timestamp"]
  }
}
